<window xmlns="http://jmix.io/schema/ui/window">
    <layout>
        <hbox height="300px" spacing="true" width="100%">
            <groupBox caption="dockMode=LEFT"
                      height="100%"
                      width="100%">
                <split dockable="true"
                       dockMode="LEFT"
                       orientation="horizontal"
                       height="100%"
                       width="100%">
                    <hbox height="100%" width="100%">
                        <label value="LEFT" align="MIDDLE_CENTER"/>
                    </hbox>
                    <hbox height="100%" width="100%">
                        <label value="RIGHT" align="MIDDLE_CENTER"/>
                    </hbox>
                </split>
            </groupBox>
            <groupBox caption="dockMode=RIGHT"
                      height="100%"
                      width="100%">
                <split dockable="true"
                       dockMode="RIGHT"
                       orientation="horizontal"
                       height="100%"
                       width="100%">
                    <hbox height="100%" width="100%">
                        <label value="LEFT" align="MIDDLE_CENTER"/>
                    </hbox>
                    <hbox height="100%" width="100%">
                        <label value="RIGHT" align="MIDDLE_CENTER"/>
                    </hbox>
                </split>
            </groupBox>
        </hbox>
    </layout>
</window>
