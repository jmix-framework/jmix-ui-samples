<window xmlns="http://jmix.io/schema/ui/window">
    <data>
        <collection id="customerDc"
                    class="io.jmix.sampler.entity.Customer"
                    fetchPlan="_local">
            <loader id="customersLoader">
                <query>
                    <![CDATA[select e from sampler_Customer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode width="800" height="600"/>
    <layout expand="customerTable"
            spacing="true">
        <table id="customerTable"
               dataContainer="customerDc"
               width="100%">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="lastName"/>
                <column id="age"/>
                <column id="active"/>
                <column id="grade"/>
            </columns>
            <pagination/>
            <buttonsPanel alwaysVisible="true">
                <button id="createBtn"
                        action="customerTable.create"/>
                <button id="editBtn"
                        action="customerTable.edit"/>
                <button id="removeBtn"
                        action="customerTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
